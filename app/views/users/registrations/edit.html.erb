<div>
  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "flash #{key}" %>
  <% end %>
</div>    

<style>
  .flash{
    text-align: center;
    font-size: 16px;
    margin-bottom: 5px;
    color: green;
  }  
</style>

<div class="page-container01 user-setting">
  <div class="col-md-12 white-bg no-padding">
    <div class="pane-header">
      <h4> Email </h4>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          <h5><strong>PERSONAL EMAIL</strong></h5>
        </div>
        <div class="col-md-6"> 
          <% if current_user.personal_email.nil? %> 
            <a href="javascript:void(0);" onclick="show_email_edit_section()">
                <span class="fa fa-plus-square edit" aria-hidden="true"></span> Add Personal Email
            </a> 
          <% else %>
            <%= current_user.personal_email %> 
          <% end %>  
        </div>
        <div class="col-md-2 text-right"> 
            <a href="javascript:void(0);" onclick="show_email_edit_section()">
                <span class="fa fa-pencil-square-o" aria-hidden="true"></span> Edit
            </a> 
        </div>
      </div>           
      <div id="email_edit_section" style="display: none">  
        <div class="row">
          <div class="col-md-4">
          </div>
          <div class="col-md-8">
            <div class="form-group">
              <div class="row">
                <div>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="form-group">
                      <%= f.email_field :personal_email, autofocus: true, type: "text", class: "form-control", id: "exampleInputPassword1", placeholder: "test@yahoo.com" %>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-8 text-right">
                      <button type="button" class="btn btn-bordered" data-dismiss="modal" onclick="hide_email_edit_section()">Cancel</button>
                            &nbsp;&nbsp;
                      <%= f.submit "Save", class: "btn btn-solid" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>    
    </div>

    <div class="pane-header">
      <h4>  Phone Number </h4>
    </div>
    <div class="panel-body">
      <div class="row primary-phone">
        <div class="col-md-4">
          <h5><strong>PRIMARY PHONE</strong></h5>
        </div>
        <div class="col-md-6"> 
          <% if current_user.phone.nil? %> 
            <a href="javascript:void(0);" onclick="show_phone_edit_section()">
                <span class="fa fa-plus-square edit" aria-hidden="true"></span> Add Primary Phone
            </a> 
          <% else %>
            <%= current_user.phone %> 
          <% end %>            
        </div>
        <div class="col-md-2 text-right"> 
            <a href="javascript:void(0);" onclick="show_phone_edit_section()">
                <span class="fa fa-pencil-square-o" aria-hidden="true"></span> Edit
            </a> 
        </div>
      </div>        

      <div id="phone_edit_section" style="display: none">  
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |p| %>
          <%= devise_error_messages! %>
          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8 user-setting">
              <div class="form-group">
                <div class="row">
                  <div class="col-md-8">
                    <%= p.number_field :phone, autofocus: true, type: "text", class: "form-control", id: "exampleInputPassword1", placeholder: "Enter number" %>
                  </div>
                </div>
              </div>
            </div>
          </div>         
          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-8">
              <div class="text-right col-md-8">
                <button type="button" class="btn btn-bordered" data-dismiss="modal" onclick="hide_phone_edit_section()">Cancel</button>
                &nbsp;&nbsp;
                <%= p.submit "Save", class: "btn btn-solid" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>  
        
      <div class="row primary-phone">
        <div class="col-md-4">
          <h5><strong>MOBILE PHONE</strong></h5>
        </div>
        <div class="col-md-6"> 
          <% if current_user.secondary_phone.nil? %> 
            <a href="javascript:void(0);" onclick="show_mobile_edit_section()">
                <span class="fa fa-plus-square edit" aria-hidden="true"></span> Add Mobile Phone
            </a> 
          <% else %>
            <%= current_user.secondary_phone %> 
          <% end %>             
        </div>
        <div class="col-md-2 text-right"> 
            <a href="javascript:void(0);" onclick="show_mobile_edit_section()">
                <span class="fa fa-pencil-square-o" aria-hidden="true"></span> Edit
            </a> 
        </div>
      </div>  
        
      <div id="mobile_edit_section" style="display: none">  
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |p| %>
          <%= devise_error_messages! %>
          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8 user-setting">
              <div class="form-group">
                <div class="row">
                  <div class="col-md-8">
                    <%= p.number_field :secondary_phone, autofocus: true, type: "text", class: "form-control", id: "exampleInputPassword1", placeholder: "Enter number" %>
                  </div>
                </div>
              </div>
            </div>
          </div>          
          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-8">
              <div class="text-right col-md-8">
                <button type="button" class="btn btn-bordered" data-dismiss="modal" onclick="hide_mobile_edit_section()">Cancel</button>
                &nbsp;&nbsp;
                <%= p.submit "Save", class: "btn btn-solid" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>        
    </div>

    <div class="pane-header">
      <h4>  Password </h4>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          <h5><strong>Password</strong></h5>
        </div>
        <div class="col-md-6"> ********** </div>
        <div class="col-md-2 text-right"> 
            <a href="javascript:void(0);" onclick="show_password_edit_section()">
                <span class="fa fa-pencil-square-o" aria-hidden="true"></span> Edit
            </a> 
        </div>
      </div>            
      
      <div id="password_edit_section" style="display: none">  
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div>
            <div class="row">
              <div class="col-md-4">
              </div>
              <div class="col-md-8 user-setting">
                <div class="form-group">
                  <div class="row">
                      <div class="col-md-8">
                        <div class="form-group">
                          <label>Old Password</label>
                          <%= f.password_field :current_password, autocomplete: "off", type:"password", class: "form-control", id: "exampleInputPassword1",  placeholder: "" %>
                        </div>
                      <div class="form-group">
                        <label>New Password</label>
                        <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", id: "exampleInputPassword1", placeholder: "" %>
                      </div>
                      <div class="form-group">
                        <label>Confirm Password</label>
                        <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", class: "form-control", id: "exampleInputPassword1", placeholder:"" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-8">
              <div class="text-right col-md-8">
                <button type="button" class="btn btn-bordered" data-dismiss="modal" onclick="hide_password_edit_section()">Cancel</button>
                &nbsp;&nbsp;
                <%= f.submit "CHANGE", class: "btn btn-solid" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>    
    </div>
  </div>
</div>

<script>
  function show_phone_edit_section(){
             $("#phone_edit_section").css("display", "block");
           }  
           
  function hide_phone_edit_section(){
             $("#phone_edit_section").css("display", "none");
           }    
  function show_mobile_edit_section(){
             $("#mobile_edit_section").css("display", "block");
           }  
           
  function hide_mobile_edit_section(){
             $("#mobile_edit_section").css("display", "none");
           }             
  function show_email_edit_section(){
             $("#email_edit_section").css("display", "block");
           }  
           
  function hide_email_edit_section(){
             $("#email_edit_section").css("display", "none");
           }    
  function show_password_edit_section(){
             $("#password_edit_section").css("display", "block");
           }  
           
  function hide_password_edit_section(){
             $("#password_edit_section").css("display", "none");
           }               
</script>  