<div class="login-container col-md-4 login-form">
  <h1 class="login-heading">Log In</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "exampleInputEmail1",  placeholder: "Email", type: "input"%>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", id: "exampleInputPassword1", placeholder: "Password"%>
    </div>
                  
    <div class="checkbox links">
      <label>
        <%= f.check_box :remember_me, type: "checkbox"%>  Remember my account. 
      </label>
    </div>

    <div class="form-group links">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
      <%= f.button "Continue", type: "submit", class: "btn btn-continue"%>
  <%end%>
</div>
    